{
  "run": {
    "timeout": "5m"
  },
  "linters": {
    "disable-all": true,
    "enable": [
      "gocyclo",
      "revive",
      "goconst",
      "misspell",
      "ineffassign",
      "lll",
      "vet",
      "gosec",
      "dupl",
      "unconvert",
      "errcheck",
      "staticcheck",
      "structcheck",
      "varcheck",
      "gofmt"
    ]
  },
  "linters-settings": {
    "dupl": {
      "threshold": 100
    },
    "lll": {
      "line-length": 120
    },
    "gocyclo": {
      "min-complexity": 12
    }
  },
  "issues": {
    "exclude-rules": [{
      "path": "_test.go",
      "linters": [
        "gocyclo",
        "errcheck",
        "dupl",
        "gosec"
      ]
    }]
  }
}
